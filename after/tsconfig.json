{
    "files": [
      "./app.ts"
    ],
    "include": [
      "./**/*.ts"
    ],
    "exclude": ["node_modules", "build", "webpack", "**/__tests__/*", "**/__mocks__/*", "*.graphql"],
    "compilerOptions": {
      "noUnusedLocals": true,
      "noImplicitThis": true,
      "experimentalDecorators": true,
      "strictNullChecks": true,
      "noImplicitReturns": true,
      "preserveConstEnums": true,
      "forceConsistentCasingInFileNames": true,
      "suppressImplicitAnyIndexErrors": true,
      "module": "commonjs",
      "lib": ["es6", "dom", "esnext.asynciterable", "es7", "es2017"],
      "noImplicitAny": true,
      "target": "es6",
      "outDir": "dist",
      "rootDir": ".",
      "sourceMap": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "moduleResolution": "node",
      "removeComments": true,
      "typeRoots": [ "node_modules/@types" ],
    }
  }
  